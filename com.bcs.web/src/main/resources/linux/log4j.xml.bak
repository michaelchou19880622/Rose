<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration
        xmlns:log4j='http://jakarta.apache.org/log4j/' >
    <!-- Console -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyyMMdd HH:mm:ss.SSS} %-5p [%-4L] %-30.30C{1} %-35M [%-27t] - %m%n}"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="INFO"/>
            <param name="levelMax" value="ERROR"/>
        </filter>
    </appender>
    <!-- ALL File -->
    <appender name="Appender1" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="/bcs/log/taishin.${yyyy-mm-dd}.log"/>
        <param name="Append" value="true"/>
        <param name="MaxBackupIndex" value="50"/>
        <param name="MaxFileSize" value="100MB"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyyMMdd HH:mm:ss.SSS} %-5p [%-4L] %-30.30C{1} %-35M [%-27t] - %m%n}"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="INFO"/>
            <param name="levelMax" value="ERROR"/>
        </filter>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/bcs/log/taishin.${yyyy-mm-dd}.log.gz"/>
        </rollingPolicy>
    </appender>
    <!-- ERROR File -->
    <appender name="Appender2" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="/bcs/log/taishin.error.${yyyy-mm-dd}.log"/>
        <param name="Append" value="true"/>
        <param name="MaxBackupIndex" value="50"/>
        <param name="MaxFileSize" value="100MB"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyyMMdd HH:mm:ss.SSS} %-5p [%-4L] %-30.30C{1} %-35M [%-27t] - %m%n}"/>
        </layout>
        <filter class="org.apache.log4j.varia.LevelRangeFilter">
            <param name="levelMin" value="ERROR"/>
            <param name="levelMax" value="ERROR"/>
        </filter>
    </appender>
    <!-- PNP -->
    <appender name="PNP" class="org.apache.log4j.RollingFileAppender">
        <param name="File" value="/bcs/log/taishin.pnp.${yyyy-mm-dd}.log"/>
        <param name="Append" value="true"/>
        <param name="MaxBackupIndex" value="50"/>
        <param name="MaxFileSize" value="100MB"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyyMMdd HH:mm:ss.SSS} %-5p [%-4L] %-30.30C{1} %-35M [%-27t] - %m%n}"/>
        </layout>
        <rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
            <param name="FileNamePattern" value="/bcs/log/taishin.pnp.${yyyy-mm-dd}.log.gz"/>
        </rollingPolicy>
    </appender>
    <!--使用Logger.getLogger("XXX")獲得此輸出器，且不會使用根輸出器-->
    <logger name="PnpRecorder" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="PNP"/>
    </logger>
    <root>
        <appender-ref ref="console"/>
        <appender-ref ref="Appender1"/>
        <appender-ref ref="Appender2"/>
        <appender-ref ref="PNP"/>
    </root>
</log4j:configuration>