<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.bcs</groupId>
        <artifactId>com.bcs.project</artifactId>
        <version>0.0.1.RELEASE</version>
    </parent>
    <artifactId>com.bcs.web</artifactId>
    <dependencies>
        <dependency>
            <groupId>com.bcs</groupId>
            <artifactId>com.bcs.core</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>TSIB</artifactId>
                    <groupId>TSIB</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>pwd</artifactId>
                    <groupId>pwd</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.bcs</groupId>
            <artifactId>com.bcs.core.bot</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>TSIB</artifactId>
                    <groupId>TSIB</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>pwd</artifactId>
                    <groupId>pwd</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.bcs</groupId>
            <artifactId>com.bcs.core.web</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>TSIB</artifactId>
                    <groupId>TSIB</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>pwd</artifactId>
                    <groupId>pwd</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.bcs</groupId>
            <artifactId>com.bcs.core.taishin</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>TSIB</artifactId>
                    <groupId>TSIB</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>pwd</artifactId>
                    <groupId>pwd</groupId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>com.bcs</groupId>
            <artifactId>com.bcs.core.linepoint</artifactId>
            <version>${project.version}</version>
            <exclusions>
                <exclusion>
                    <artifactId>TSIB</artifactId>
                    <groupId>TSIB</groupId>
                </exclusion>
                <exclusion>
                    <artifactId>pwd</artifactId>
                    <groupId>pwd</groupId>
                </exclusion>
            </exclusions>
        </dependency>
    </dependencies>
    <packaging>war</packaging>

    <profiles>
        <profile>
            <id>uat-ap</id>
            <build>
                <directory>target/UAT-AP</directory>
            </build>
            <properties>
                <package.environment>uat-ap</package.environment>
                <rp.build.warname>taishinapi</rp.build.warname>
                <maven.war.webxml>src/main/resources/uat-ap/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>uat-be</id>
            <build>
                <directory>target/UAT-BE</directory>
            </build>
            <properties>
                <package.environment>uat-be</package.environment>
                <rp.build.warname>taishinuat</rp.build.warname>
                <maven.war.webxml>src/main/resources/uat-be/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>prod-be-oa</id>
            <build>
                <directory>target/PROD-BE</directory>
            </build>
            <properties>
                <package.environment>prod-be-oa</package.environment>
                <rp.build.warname>taishinoa</rp.build.warname>
                <maven.war.webxml>src/main/resources/prod-be-oa/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>prod-be-oaapi</id>
            <build>
                <directory>target/PROD-BE</directory>
            </build>
            <properties>
                <package.environment>prod-be-oaapi</package.environment>
                <rp.build.warname>taishinoaapi</rp.build.warname>
                <maven.war.webxml>src/main/resources/prod-be-oaapi/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>prod-ap-oa</id>
            <build>
                <directory>target/PROD-AP</directory>
            </build>
            <properties>
                <package.environment>prod-ap-oa</package.environment>
                <rp.build.warname>taishinoa</rp.build.warname>
                <maven.war.webxml>src/main/resources/prod-ap-oa/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>prod-ap-oaapi</id>
            <build>
                <directory>target/PROD-AP</directory>
            </build>
            <properties>
                <package.environment>prod-ap-oaapi</package.environment>
                <rp.build.warname>taishinoaapi</rp.build.warname>
                <maven.war.webxml>src/main/resources/prod-ap-oaapi/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>windows</id>
            <build>
                <directory>target</directory>
            </build>
            <properties>
                <package.environment>windows</package.environment>
                <rp.build.warname>Taishin</rp.build.warname>
                <maven.war.webxml>src/main/resources/windows/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
        <profile>
            <id>linux</id>
            <build>
                <directory>target</directory>
            </build>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <package.environment>linux</package.environment>
                <rp.build.warname>Taishin</rp.build.warname>
                <maven.war.webxml>src/main/resources/linux/web/web.xml</maven.war.webxml>
            </properties>
        </profile>
    </profiles>
    <build>
        <resources>
            <resource>
                <directory>${basedir}/src/main/resources</directory>
                <excludes>
                    <exclude>windows/</exclude>
                    <exclude>linux/</exclude>
                    <exclude>uat-ap/</exclude>
                    <exclude>uat-be/</exclude>
                    <exclude>prod-be-oa/</exclude>
                    <exclude>prod-be-oa-api/</exclude>
                    <exclude>prod-ap-oa/</exclude>
                    <exclude>prod-ap-oa-api/</exclude>
                </excludes>
            </resource>
        </resources>
        <finalName>bcs</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>2.4</version>
                <configuration>
                    <archive>
                        <manifest>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <addMavenDescriptor>false</addMavenDescriptor> <!-- remove maven folder -->
                    </archive>
                    <webResources>
                        <resource>
                            <directory>src/main/resources/${package.environment}/web</directory>
                            <targetPath>WEB-INF/html/BCS/Views/Common</targetPath>
                            <excludes>
                                <exclude>web.xml</exclude>
                            </excludes>
                        </resource>
                        <resource>
                            <directory>src/main/resources/${package.environment}</directory>
                            <targetPath>WEB-INF/classes</targetPath>
                            <excludes>
                                <exclude>web/</exclude>
                            </excludes>
                        </resource>
                    </webResources>
                    <!-- web.xml is not mandatory since JavaEE 5 -->
                    <failOnMissingWebXml>true</failOnMissingWebXml>
                    <!-- com.bcs.X jar & log jar 要包進去 -->
                    <packagingExcludes>
                        %regex[WEB-INF/lib/(?!log4j.*\.jar)(?!slf4j.*\.jar)(?!logging.*\.jar)(?!com.bcs.*\.jar).*\.jar]
                    </packagingExcludes>
<!--                     開啟這個需要註解Tomcat Share Libery 的設定，並與Richart同步上線-->
<!--                    <packagingExcludes>-->
<!--                        WEB-INF/lib/*pwd.jar,-->
<!--                        WEB-INF/lib/*TSIB.jar-->
<!--                    </packagingExcludes>-->
                    <warName>${rp.build.warname}</warName> <!-- set up war name -->
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>